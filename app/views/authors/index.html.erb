<% provide(:title, 'All books') %>
<h1>All authors</h1>

<%= form_tag(authors_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search authors" %>
  <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
<% end %>

<% if !params[:search] %>
  <%= link_to "Add author", new_author_path, class: "btn btn-primary" %>
<% end %>

<%#= will_paginate %>

<ul class="authors custom-list">
  <%= render @authors %>
</ul>

<%#= will_paginate %>