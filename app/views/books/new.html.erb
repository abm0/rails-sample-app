<% provide(:title, 'Create new book') %>
<h1>Create new book</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>
      <%= render 'shared/error_messages', object: @book %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create book", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>