<% provide(:title, 'All books') %>
<h1>All books</h1>

<%= form_tag(books_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search books" %>
  <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
<% end %>

<% if !params[:search] %>
  <%= link_to "Add book", new_book_path, class: "btn btn-primary" %>
<% end %>

<%#= will_paginate %>

<ul class="books custom-list">
  <%= render @books %>
</ul>

<%#= will_paginate %>